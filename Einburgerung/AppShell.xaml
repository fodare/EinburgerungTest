<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Einburgerung.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Einburgerung.View"
    Shell.FlyoutBehavior="Flyout"
    Title="Einburgerung Mock">

    <FlyoutItem Title="General"
                Icon="question.png">

        <Tab>
            <ShellContent
                Shell.NavBarIsVisible="True"
                ContentTemplate="{DataTemplate view:MainPage}"
                Route="MainPage"/>
        </Tab>

    </FlyoutItem>

    <FlyoutItem Title="States"
                Icon="question.png">

        <Tab>
            <ShellContent
                Shell.NavBarIsVisible="True"
                ContentTemplate="{DataTemplate view:StateQuestionsPage}"
                Route="StateQuestionsPage"/>
        </Tab>

    </FlyoutItem>

</Shell>